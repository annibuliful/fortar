<% layout('layout') %>

<div class="wrapper login-main">
    <div class="row justify-content-center">
        <div class="card login-card">
            <div class="card-body">
                <h3>ลืมรหัสผ่าน</h3>
                <img src="/images/logo.png" alt="Showroomrod">
                <p>กรอกอีเมล์ของคุณเพื่อขอรหัสใหม่</p>

                <% if(hasErrors) {%>
                    <% for(var i = 0; i < messages.length; i++) {%>
                        <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">
                            &times;
                        </a>
                        <%= messages[i] %>
                            
                        </div>
                    <% } %>
                <% } %>
                
                <% if(noErrors) {%>
                    <div class="alert alert-info">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">
                        &times;
                    </a>
                    <%= info %>
            
                    </div>
                <% } %>
                
                <br>
                <form method="POST" action="/forgot">
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="อีเมล์">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">ขอรหัสผ่านใหม่</button>
                </form>
                <br>
                <br>
                <div class="switch-page">
                    <span>จำรหัสผ่านได้แล้ว?</span> &ensp;
                    <a class="btn btn-outline-primary btn-sm" href="/login">เข้าสู่ระบบ</a>
                </div>
            </div>
        </div>
    </div>
</div>