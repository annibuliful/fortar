<% layout('layout') %>

<div class="wrapper">    
    <div class="row car-carousel">
        <div class="col-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <% for (var j=1; j<data.image.length; j++) { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="j"></li>
                    <% } %>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active" style="width:100%;">
                        <img class="d-block w-100" src="/<%= data.image[0].filename %>" alt="First slide">
                    </div>
                    <% for (var j=1; j<data.image.length; j++) { %>
                    <div class="carousel-item" style="width:100%;">
                    <img class="d-block w-100" src="/<%= data.image[j].filename %>" alt="First slide">
                    </div>
                    <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row car-info">
        <div class="col-12 col-lg-4 car-seller">
            <div class="card car-seller-card">
                <div class="card-block">
                    <h3 class="card-title"><%= data.price %> บาท</h3>
                    <p class="card-text">ผู้ขาย <%= data.owner.name %> </p>
                    <a class="btn btn-primary btn-block" data-toggle="collapse" href="#tel" aria-expanded="false" aria-controls="tel">กดดูเบอร์ผู้ขาย</a>
                    <div class="collapse" id="tel">
                        <div class="card card-body car-seller-tel-popup">
                            <% if (data.owner.tel == undefined ) { %>
                                <p>ผู้ขายยังไม่ได้ให้เบอร์ติดต่อกลับ ทีมงานกำลังติดต่อขอเบอร์ติดต่อผู้ขายครับ</p>
                            <% } else { %>
                                <h4><%= data.owner.tel %></h4>
                            <% } %>
                        </div>
                    </div>
                    <div class="call-me-button">
                        <a href="tel:0628294663" class="btn btn-success btn-block"><i class="fa fa-phone" aria-hidden="true"></i> โทรจ้างตรวจสภาพรถ</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card car-detail-card">
                <div class="card-block">
                    <h4 class="card-block blue"><%= data.make %> <%= data.model %> ปี <%= data.year %> </h4>
                    <hr>
                 

                    <p>เลขไมล์ <%= data.mileage %> กม.</p>
                    <p>นัดดูรถได้ที่ <%= data.locationDistrict %> จังหวัด <%= data.locationProvince %></p>
                    <h6>รายละเอียดเพิ่มเติม</h6>
                    <p><%= data.detail %> </p>
                    <!--
                    <a><img src="/images/icon-line-share.png"></a>
                    <a><img src="/images/icon-fb-share.png"></a>
                    -->
                </div>
            </div>
        </div>        
    </div>

    <div class="row car-photo">
        <% for (var j=0; j<data.image.length; j++) { %>
        <div class="col-12 col-lg-6 car-photo-each"><img class="img-fluid" src="/<%= data.image[j].filename %>"></div>
        <% } %>
    </div>

</div>